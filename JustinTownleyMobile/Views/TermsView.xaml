    </NavigationPage.TitleView>
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal">
                <BoxView Color="#003057" />
                       
            </StackLayout>
            <ScrollView>
                <StackLayout>
                
                </StackLayout>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>